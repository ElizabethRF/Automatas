<p id="notice"><%= notice %></p>

<h1>Interacciones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Enfermera</th>
      <th>Paciente</th>
      <th>Símbolo</th>
      <th>Comentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.user.name %></td>
        <td><%= interaction.paciente.name + " " + interaction.paciente.lastname1 + " "+ interaction.paciente.lastname2 %></td>
        <td><%= image_tag interaction.simbol.picture.url, size: "50x50" %></td>
        <td><%= interaction.comentarios %></td>
        <td><%= link_to 'Ver', interaction,class: 'btn btn-success btn-xs'  %></td>
        <td><%= link_to 'Editar', edit_interaction_path(interaction), class: 'btn btn-warning btn-xs'  %></td>
        <td><%= link_to 'Eliminar', interaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Interacción', new_interaction_path, class: 'btn btn-info'  %>
