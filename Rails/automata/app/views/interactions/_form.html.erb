<style>
.right{
  text-align: right;}
</style>

<%= render 'shared/errors', obj: @interaction %>
<%nombres =[]%>
<%cont = 0%>
<div class="mx-auto">
    <div class="container">
      <%= form_with(model: interaction, local: true) do |form| %>


    <div class="form-group row">
      <div class=" col-md-2 right">
        <%= form.label :paciente_id %>
        </div>
      <div class="col-md-6">
        <%= form.select(:paciente_id, Paciente.all.collect {|u| [u.name + " " +u.lastname1 + " "+u.lastname2 , u.id]}) %>        
      </div>
    </div>


      <% @simbolos.each do |s| %>
        <%= image_tag s.picture.url, size: "100x100" %>  
        <%= form.radio_button(:simbol_id, s.id)  %>
      <%end%>
      
      <%#= form.select(:simbol_id, Simbol.all.collect {|u| [u.picture, u.id]}) %>
      <%#= form.radio_button(:simbol_id, Simbol.all.collect {|u| [u.picture, u.id]}) %>

      <div class="form-group row">
      <div class=" col-md-2 right">
        <%= form.label :comentarios %>
        </div>
      <div class="col-md-6">
        <%= form.text_area :comentarios, id: :interaction_comentarios %>
      </div>
      </div>

      <div class="form-group">
      <div class="text-center col-md-12">
        <%= form.submit "Guardar", class: 'btn btn-info'%>
      </div>
      </div>
    <% end %>
  </div>
</div>
