<style>
.right{
  text-align: right;}
</style>

<%= render 'shared/errors', obj: @interaction %>

<div class="mx-auto">
    <div class="container">
      <%= form_with(model: interaction, local: true) do |form| %>

      <div class="form-group row">
      <div class=" col-md-2 right">
        <%= form.label :paciente_id %>
        </div>
      <div class="col-md-6">
        <%= form.select :paciente_id, ['Administrador', 'Jefe de departamento','Medico','Enfermera'],class: "form-control"%>
        
      </div>
      </div>

      <div class="form-group row">
        
         <% @simbolos.each do |s| %>
          <%= image_tag s.picture.url, size: "100x100" %>
        <%end%>
        </div>
      

      <div class="form-group row">
      <div class=" col-md-2 right">
        <%= form.label :comentarios %>
        </div>
      <div class="col-md-6">
        <%= form.text_area :comentarios, id: :interaction_comentarios %>
      </div>
      </div>

      <div class="form-group">
      <div class="text-center col-md-12">
        <%= form.submit "Guardar", class: 'btn btn-info'%>
      </div>
      </div>
    <% end %>
  </div>
</div>
