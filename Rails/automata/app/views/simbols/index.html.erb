<p id="notice"><%= notice %></p>

<h1>Símbolos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Imagen</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @simbols.each do |simbol| %>
      <tr>
        <td><%= simbol.name %></td>
        <td><%= simbol.picture %></td>
        <td><%= simbol.detail %></td>
        <td><%= link_to 'Ver', simbol, class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Editar', edit_simbol_path(simbol), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Eliminar', simbol, method: :delete, data: { confirm: '¿Estás seguro? Esta acción no se puede deshacer' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo símbolo', new_simbol_path,class: 'btn btn-info' %>
