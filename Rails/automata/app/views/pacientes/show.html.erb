<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @paciente.name %>
</p>

<p>
  <strong>Apellido paterno:</strong>
  <%= @paciente.lastname1 %>
</p>

<p>
  <strong>Apellido materno:</strong>
  <%= @paciente.lastname2 %>
</p>

<p>
  <strong>Padecimiento:</strong>
  <%= @paciente.padecimiento %>
</p>

<p>
  <strong>Fecha de ingreso:</strong>
  <%= @paciente.fechaIngreso %>
</p>

<p>
  <strong>Sexo:</strong>
  <%= @paciente.sexo %>
</p>

<p>
  <strong>Observaciones:</strong>
  <%= @paciente.observaciones %>
</p>

<p>
  <strong>Fecha de nacimiento:</strong>
  <%= @paciente.fechaDeNacimiento %>
</p>

<%if logged_in? and current_user.tipo == "Medico" %>
<%= link_to 'Editar', edit_paciente_path(@paciente),class: 'btn btn-warning btn-xs' %> |<%end%><%= link_to 'Atrás', pacientes_path ,class: 'btn btn-default btn-xs'%>

<h1>Interacciones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Enfermera</th>
      <th>Paciente</th>
      <th>Símbolo</th>
      <th>Comentarios</th>
      <th>Fecha y hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.user.name %></td>
        <td><%= interaction.paciente.name + " " + interaction.paciente.lastname1 + " "+ interaction.paciente.lastname2 %></td>
        <td ><%= image_tag interaction.simbol.picture.url, size: "50x50" %><br><%=interaction.simbol.name%></td>
        <td><%= interaction.comentarios %></td>
        <td><%= interaction.created_at %></td>
        <td><%= link_to 'Ver', interaction,class: 'btn btn-success btn-xs'  %></td>
        <td><%= link_to 'Agregar comentarios', edit_interaction_path(interaction), class: 'btn btn-warning btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>





