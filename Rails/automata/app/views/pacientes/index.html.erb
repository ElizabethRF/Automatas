<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Padecimiento</th>
      <th>Fecha de ingreso</th>
      <th>Sexo</th>
      <th>Observaciones</th>
      <th>Fecha de nacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.name %></td>
        <td><%= paciente.lastname1 %></td>
        <td><%= paciente.lastname2 %></td>
        <td><%= paciente.padecimiento %></td>
        <td><%= paciente.fechaIngreso %></td>
        <td><%= paciente.sexo %></td>
        <td><%= paciente.observaciones %></td>
        <td><%= paciente.fechaDeNacimiento %></td>
        <td><%= link_to 'Ver', paciente ,class: 'btn btn-success btn-xs' %></td>
        <%if logged_in? and current_user.tipo == "Enfermera" %>
      
        <%end%>
        <%if logged_in? and current_user.tipo == "Medico" %>
        <td> 
        <%= link_to "Reporte", paciente_url(paciente, format: :pdf), class: 'btn btn-info btn-xs' %>
        </td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Eliminar', paciente, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
        <%end%>

      </tr>

    <% end %>
  </tbody>
</table>




<br>
<%if current_user == 'Medico'%>
  <%= link_to 'Nuevo paciente', new_paciente_path, class: 'btn btn-info' %>
<%end%>
