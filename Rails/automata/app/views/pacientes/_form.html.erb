<style>
.right{
  text-align: right;}
</style>
<%= render 'shared/errors', obj: @paciente %>

<div class="mx-auto">
    <div class="container">
    <%= form_with(model: paciente, local: true) do |form| %>


      <div class="form-group row">
        <div class=" col-md-3 right">
          <%= form.label :Nombre %>
        </div>
        <div class="col-md-6">
          <%= form.text_field :name, id: :paciente_name , class: "form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Apellido_Paterno%>
        </div>
        <div class="col-md-6">
        <%= form.text_field :lastname1, id: :paciente_lastname1, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Apellido_Materno %>
        </div>
        <div class="col-md-6">
        <%= form.text_field :lastname2, id: :paciente_lastname2, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Padecimiento %>
        </div>
        <div class="col-md-6">
        <%= form.text_field :padecimiento, id: :paciente_padecimiento, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Fecha_Ingreso %>
        </div>
        <div class="col-md-6">
        <%= form.date_select :fechaIngreso, start_year: Date.today.year, end_year: Date.today.year - 100,id: :paciente_fechaIngreso %>
        </div>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Sexo %>
        </div>
        <div class="col-md-6">
        <%= form.select :sexo, ['Masculino', 'Femenino'],class: "form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Observaciones %>
        </div>
        <div class="col-md-6">
        <%= form.text_area :observaciones, id: :paciente_observaciones , class: "form-control"%>
        </div>
      </div>



      <div class="form-group row">
        <div class=" col-md-3 right">
        <%= form.label :Fecha_de_nacimiento %>
        </div>
        <div class="col-md-6">
        <%= form.date_select :fechaDeNacimiento, start_year: Date.today.year, end_year: Date.today.year - 100,id: :paciente_fechaDeNacimiento %>
        </div>
      </div>

      <div class="form-group row">
        <div class=" col-md-3 right">
         <%= form.label :No_hospitalizado %>
        </div>
        <div class="col-md-6">
        <%= form.check_box :activo %>
        <p>Debe seleccionarse cuando el paciente ya no est√° internado </p>
        </div>
      </div>


      <div class="form-group">
      <div class="text-center col-md-12">
        <%= form.submit "Guardar", class: 'btn btn-info'%>
      </div>
    </div>
    <% end %>
  </div>
</div>
